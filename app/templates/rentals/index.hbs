<!-- Here we are wrapping rental-listing inside the block of another component, list-filter. In the list-filter component, we reference this nested block with the {{yield}} expression -->
{{#list-filter
   filter=(action 'filterByCity')
   as |filteredResults|}}
  <ul class="results">
    {{#each filteredResults as |rentalUnit|}}
      <li>{{rental-listing rental=rentalUnit}}</li>
    {{/each}}
  </ul>
{{/list-filter}}